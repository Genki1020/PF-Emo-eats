<h4>ユーザー登録</h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class = " pl-xl-5	">
  <div class = "container">
    <div class="form-horizontal">
      <div class="form-group row">
        <%= f.label :名前 , class: "col-sm-3 col-form-label"%>
        <div class="col-sm-9">
          <div class = "form-control-plaintext">
            <%= f.text_field :name, autofocus: true, placeholder: "深澤照", size: 15%>
          </div>
        </div>
      </div>

      <div class="form-group row">
       <%= f.label :フリガナ , class: " col-sm-3 col-form-label" %>
       <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :furigana, autofocus: true, placeholder: "フカザワヒカル", size: 15 %>
        </div>
       </div>
      </div>

 <div class="form-group row">
       <%= f.label  :アカウント名 , class: " col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :account, autofocus: true, placeholder: "snow9", size: 15 %>
        </div>
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :メールアドレス , class: " col-sm-3 col-form-label" %>
       <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.email_field :email, autofocus: true, placeholder: "test@test.com", size: 32 %>
        </div>
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :郵便番号（ハイフンなし） , class: " col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", size: 8 %>
        </div>
      </div>
    </div>

  <div class="form-group row">
    <%= f.label :都道府県, class: " col-sm-3 col-form-label"  %>
    <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.select :prefecture, User.prefectures.keys.to_a, include_blank: true %>
        </div>
    </div>
  </div>



   <div class="form-group row">
       <%= f.label :住所 , class: " col-sm-3 col-form-label"  %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
         <%= f.text_field :address, autofocus: true, placeholder: "渋谷区道玄坂0-0", size: 32 %>
        </div>
      </div>
   </div>

   <div class="form-group row">
       <%= f.label :電話番号（ハイフンなし） , class: " col-sm-3 col-form-label"  %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
         <%= f.text_field :telephone_number, autofocus: true, placeholder: "0000000000", size: 15 %>
        </div>
      </div>
   </div>

   <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="col-md-12 text-center">
    <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
