    <div class="card-body">
      <div class="row">
  <% @eateries.each do |eatery| %>
    <%= link_to eatery_path(eatery.id) do %>
      <%= attachment_image_tag eatery, :image, format: 'jpeg', size: "210x150"%>
    <% end %>

        <div class="col-10">
          <%= attachment_image_tag eatery.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
          By <%= eatery.user.account %>
        </div>
        <div class="col-10">
         <p class="card-title">
           <%= link_to(eatery_path(eatery.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= eatery.eatery_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= eatery.report %></p>
        </div>
<% end %>
     </div>
  </div>
