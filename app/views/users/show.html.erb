<h4 class ="text-center m-5 border-bottom p-1">マイページ</h4>

<% if @user.id == current_user.id %>
<h5>登録情報  :
  <%= link_to "編集する", edit_user_path(@user), class: "btn btn-success" %>
</h5>
<% end %>

<table class="table table-bordered">
    <tbody>

        <tr>
            <th class="table-active" >アカウント</th>
            <td><%= attachment_image_tag @user, :profile_image, size: "60x50", format:'jpg', fallback:"no_image.jpg",class:"mt-3 rounded-circle"; %><%= @user.account%></td>
        </tr>
        <tr>
            <th class="table-active" >お住まいエリア</th>
            <td><%= @user.prefecture %></td>
        </tr>
    </tbody>
</table>

 <div class="row">
    <div class="col-xs-5 bg-primary">
<div class="card" style="width: 18rem;">
   <% @eateries.each do |eatery| %>

    <div class="card w-20 mx-auto mt-4 shadow-lg">
      <div class="col-20">
          <p><%= eatery.emo.emo_name %>を食べたい！</p>
          <%= attachment_image_tag eatery.user, :profile_image, size: "60x50", format:'jpg', fallback:"no_image.jpg",class:"mt-3 rounded-circle"; %>
          <%= eatery.user.account %>
      </div>

<div class="mx-auto">
    　<div class="article">
    　  <%= link_to eatery_path(eatery.id) do %>
    　　<% if eatery.images.attached? %>
     　　　<div class"article_images">
        　　<% if eatery.images.count > 0%>
        　　<%=  image_tag eatery.images.first.variant(resize: "200x200").processed, class: "article-list-img" %>
      　　　　<% end %>
          </div>
        <% end %>
        <% end %>
      </div>
</div>

        <div class="card-body">
          <div class="row">
            <div class="col-10">
             <p class="card-title">
               <%= link_to(eatery_path(eatery.id), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= eatery.eatery_name %></span></strong>
                <% end %>
              </p>
             <p>わかる！数：<%= eatery.favorites.count %></p>
             <p><%= link_to "#{eatery.post_comments.count} コメント", eatery_path(eatery.id) %></p>
            </div>
          </div>
        </div>
  </div>
<% end %>
</div>
</div>
</div>