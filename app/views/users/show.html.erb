<h4 class ="text-center m-5 border-bottom p-1">マイページ</h4>


<h5>登録情報  :
  <%= link_to "編集する", edit_user_path(@user), class: "btn btn-success" %>
</h5>

<table class="table table-bordered">
    <tbody>

        <tr>
            <th class="table-active" >アカウント</th>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %><%= @user.account%></td>
        </tr>
        <tr>
            <th class="table-active" style="width: 20% " >氏名</th>
            <td><%= @user.name%></td>
        </tr>
        <tr>
            <th class="table-active" >カナ</th>
            <td><%= @user.furigana %></td>
        </tr>
        <tr>
            <th class="table-active" >郵便番号</th>
            <td><%= @user.postal_code%></td>
        </tr>
        <tr>
            <th class="table-active" >住所</th>
            <td><%= @user.address %></td>
        </tr>
        <tr>
            <th class="table-active">電話番号</th>
            <td><%= @user.telephone_number %></td>
        </tr>
        <tr>
            <th class="table-active" >メールアドレス</th>
            <td><%= @user.email %></td>
        </tr>
    </tbody>
</table>
