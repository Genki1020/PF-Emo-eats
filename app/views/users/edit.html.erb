<div class = " pl-xl-5	">
  <h4 class="text-center m-5 border-bottom p-1">会員情報編集</h4>

  <%= form_for @user do |f| %>


   <div class = "container">
    <div class="form-horizontal">

    <div class="form-group row">
         <%= f.label :アカウント名・画像 , class: "col-sm-3 col-form-label"%>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :account, autofocus: true, size: 15%>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
          <%= f.attachment_field :profile_image %>
        </div>
       </div>
     </div>

     <div class="form-group row">
         <%= f.label :プロフィール画像 , class: "col-sm-3 col-form-label"%>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">


        </div>
       </div>
     </div>

    <div class="form-group row">
         <%= f.label :名前 , class: "col-sm-3 col-form-label"%>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :name, autofocus: true, size: 15%>
        </div>
       </div>
     </div>

    <div class="form-group row">
       <%= f.label :フリガナ , class: " col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :furigana, autofocus: true, size: 15 %>
        </div>
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :メールアドレス , class: " col-sm-3 col-form-label" %>
       <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.email_field :email, autofocus: true, size: 32 %>
        </div>
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :郵便番号（ハイフンなし） , class: " col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
          <%= f.text_field :postal_code, autofocus: true, size: 8 %>
        </div>
      </div>
    </div>

      <div class="form-group row">
       <%= f.label :都道府県, class: " col-sm-3 col-form-label"  %>
      <div class="col-sm-9">
  <th><%= f.select :prefecture, User.prefectures.keys.to_a, include_blank: true %>

   <div class="form-group row">
       <%= f.label :住所 , class: " col-sm-3 col-form-label"  %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
         <%= f.text_field :address, autofocus: true, size: 32 %>
        </div>
      </div>
   </div>


   <div class="form-group row">
       <%= f.label :電話番号（ハイフンなし） , class: " col-sm-3 col-form-label"  %>
      <div class="col-sm-9">
        <div class = "form-control-plaintext">
         <%= f.text_field :telephone_number, autofocus: true, size: 15 %>
        </div>
      </div>
   </div>

  </div>
 </div>


<div class ="row">
    <div class="col-md-5">
      <%= f.submit "編集内容を保存",  class: "btn btn-success save col-md-8"%>
    </div>
</div>
  <% end %>

</div>