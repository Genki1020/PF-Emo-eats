<% visitor = notification.visitor %>
<% eatery = notification.eatery %>

<div class="user-view clearfix ">
  <%= link_to user_path(notification.visitor) do %>
    <%= attachment_image_tag visitor, :profile_image, :fill,100,100, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class:"mt-3 rounded-circle" %>
  <% end %>

  <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
  <br>
  <% if !@post_comment.nil? %>
    <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @post_comment %></p>
  <% end %>
</div>